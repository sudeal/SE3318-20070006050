<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
          "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
          "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="error"/>

    <module name="TreeWalker">
        <!-- Naming Conventions -->
        <module name="TypeName"/> <!-- Class names in UpperCamelCase -->
        <module name="MethodName"/> <!-- Method names in lowerCamelCase -->
        <module name="LocalVariableName"/> <!-- Variables in lowerCamelCase -->
        <module name="ConstantName"/> <!-- Constants in UPPER_CASE -->
        
        <!-- Class Design -->
        <module name="ClassDataAbstractionCoupling">
            <property name="max" value="5"/>
        </module>
        <module name="ClassFanOutComplexity">
            <property name="max" value="10"/>
        </module>
        
        <!-- Documentation -->
        <module name="JavadocMethod"/>
        <module name="JavadocType"/>
        <module name="JavadocVariable"/>
        
        <!-- Size Violations -->
        <module name="MethodCount">
            <property name="maxTotal" value="50"/>
        </module>
    </module>
</module>